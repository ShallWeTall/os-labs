{
    "compilerOptions": {
        "target": "es5",           // Output JS compatible with older browsers
        "lib": ["dom", "es2016"],  // Include Map and DOM APIs
        "outDir": "public/",   // Where compiled JS goes
        "strict": true,            // Enforce strict typing
        "module": "commonjs"       // Adjust if using modules (e.g., "esnext" for browsers)
    },
    "include": ["public/**/*"],     // Compile all .ts files in public/
    "exclude": []
}
